{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "build-image",
        "annotations": {
            "description": "Template to make build images.",
            "tags": "build-image"
        }
    },
    "objects": [
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appTypes": "build-image",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appTypes": "build-image",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    },
                    {
                        "type": "Generic",
                        "generic" : {
                        	"secret": "${GENERIC_WEBHOOK_SECRET}"
                        }
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${SOURCE_REPOSITORY}",
                        "ref": "master"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                    	"noCache": true,
                        "dockerfilePath": "${DOCKER_FILE_PATH}",
                        "from": {
                            "kind": "DockerImage",
                            "name": "${S2I_IMAGE}"
                        },
                        "env": [
                                    {
                                        "name": "APP_ENV",
                                        "value": "${APP_ENV}"
                                    },
                                    {
                                        "name": "APP_ENV1",
                                        "value": "${APP_ENV1}"
                                    }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:${VERSION}"
                    }
                },
                "resources": {
                    "limits": {
                        "cpu": "4",
                        "memory": "8Gi"
                    },
                    "requests": {
                        "cpu": "2",
                        "memory": "2Gi"
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "The name of the application.",
            "value": "openblas-build-image",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY",
            "description": "Git repository for source.",
            "value": "https://github.com/thoth-station/openblas.git",
            "required": true
        },
        {
            "name": "S2I_IMAGE",
            "description": "registry.access.redhat.com/rhscl/s2i-core-rhel7, registry.access.redhat.com/rhel7.5",
            "value": "registry.access.redhat.com/rhscl/s2i-core-rhel7",
            "required": true
        },
        {
            "name": "DOCKER_FILE_PATH",
            "description": "Dockerfile.rhel75",
            "value": "Dockerfile.rhel75",
            "required": true
        },
        {
            "name": "GENERIC_WEBHOOK_SECRET",
            "description": "A secret string used to configure the Generic webhook.",
            "value": "build-secret",
            "required": true
        },
        {
            "name": "VERSION",
            "description": "Version of the build image, i.e docker image tag",
            "value": "latest",
            "required": true
        },
        {
            "name": "APP_ENV",
            "description": "APP_ENV",
            "value": "",
            "required": false
        },
        {
            "name": "APP_ENV1",
            "description": "APP_ENV1",
            "value": "",
            "required": false
        },
    ]
}

