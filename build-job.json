{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "openblas-build-job",
        "annotations": {
            "description": "Template to create a Job to build files.",
            "tags": "openblas-build-job"
        }
    },
    "objects": [
        {
            "kind": "Job",
            "apiVersion": "batch/v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "labels": {
                    "appTypes": "openblas-build-job",
                    "appName": "${APPLICATION_NAME}"
                }
            },
            "spec": {
                "template": {
                    "metadata": {
                        "labels": {
                            "appTypes": "openblas-build-job",
                            "deploymentconfig": "${APPLICATION_NAME}",
                            "appName": "${APPLICATION_NAME}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "CUSTOM_BUILD",
                                        "value": "${CUSTOM_BUILD}"
                                    },
                                    {
                                        "name": "BUILD_OPTS",
                                        "value": "${BUILD_OPTS}"
                                    },
                                    {
                                        "name": "TEST_LOOP",
                                        "value": "${TEST_LOOP}"
                                    }
                                ],
                                "name": "${APPLICATION_NAME}",
                                "image": "${BUILDER_IMAGESTREAM}",
                                "command": ["/entrypoint", "/usr/libexec/s2i/run"],
                                "resources": {
                                    "limits": {
                                        "cpu": "4",
                                        "memory": "8Gi"
                                    },
                                    "requests": {
                                        "cpu": "2",
                                        "memory": "2Gi"
                                    }
                                }
                            }
                        ],
						"restartPolicy": "Never"
                    }
                }
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "description": "The name of the application.",
            "value": "openblas-build-job",
            "from": "[a-zA-Z0-9]{10}",
            "required": true
        },
        {
            "name": "BUILDER_IMAGESTREAM",
            "description": "tensorflow-build-image-fc27-36:latest, tensorflow-build-image-rhel75-36:2",
            "value": "build-image",
            "required": true
        },
        {
            "name": "CUSTOM_BUILD",
            "description": "Set to custom BUILD command",
            "value": "",
            "required": false
        },
        {
            "name": "BUILD_OPTS",
            "description": "Custom options to bazel BUILD command",
            "value": "",
            "required": false
        },
        {
            "name": "TEST_LOOP",
            "description": "run container to debug",
            "value": "",
            "required": false
        }
    ]
}

